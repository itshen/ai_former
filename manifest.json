{
  "manifest_version": 2,
  "name": "智能表单填充助手",
  "version": "1.0",
  "description": "使用大模型智能识别和填充网页表单",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "智能表单填充",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
} 